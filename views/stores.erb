<div class="content">
  <h1>Stores</h1>
  <hr>

  <% if @stores.any? %>
    <ul>
      <% @stores.each { |store| %>
        <li><a href='/stores/<%= store.id %>'><%= store.name %></a></li>
      <% } %>
    </ul>
  <% else %>
    <p>There are no stores yet. Add one below.</p>
  <% end %>
  <br>

  <h3>Add a new store:</h3>
  <form action="/stores/new" method="post">
    <label for="name">Store name</label>
    <input id="name" name="name" type="text">
    <button type="submit">Add Store</button>
  </form>
</div>

<footer>
  <a href='/brands'>View Brands</a>
  <br>
  <a href='/'>Return Home</a>
</footer>